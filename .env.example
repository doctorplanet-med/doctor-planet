# ===========================================
# Doctor Planet - Environment Variables
# Copy this file to .env and fill in your values
# ===========================================

# Database (Vercel Postgres)
# Get from: Vercel Dashboard > Storage > Create Database > Postgres
DATABASE_URL="postgres://..."
DIRECT_URL="postgres://..."

# NextAuth Configuration
NEXTAUTH_URL="https://your-app.vercel.app"
NEXTAUTH_SECRET="generate-a-random-secret-string-here"

# Firebase Configuration (for Google Sign-In)
# Get from: Firebase Console > Project Settings > Web App
NEXT_PUBLIC_FIREBASE_API_KEY=""
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=""
NEXT_PUBLIC_FIREBASE_PROJECT_ID=""
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=""
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=""
NEXT_PUBLIC_FIREBASE_APP_ID=""

# Admin Credentials
ADMIN_EMAIL="admin@doctorplanet.com"
ADMIN_PASSWORD="your-secure-password"

# Resend Email Configuration
# Get from: https://resend.com/api-keys
RESEND_API_KEY=""

# After verifying domain at resend.com/domains:
RESEND_FROM_EMAIL="Doctor Planet <orders@yourdomain.com>"

# Leave empty in production (only for local testing)
RESEND_TEST_EMAIL=""

# App URL
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
